<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.javaProjectS12.dao.AdminProductDAO">


	
	<select id="getFeaturesContent" resultType="com.spring.javaProjectS12.vo.AdminFeaturesVO">
		select * from adminFeatures where idx =#{idx};
	</select>
	
	<select id="getNewPartList" resultType="com.spring.javaProjectS12.vo.AdminProductVO">
		select * from adminProduct order by idx desc LIMIT 0, 20 ;
	</select>

	<select id="getPartList" resultType="com.spring.javaProjectS12.vo.AdminProductVO">
		select * from adminProduct where part = #{part} order by idx desc ;
	</select>
	
	<select id="getPartList2" resultType="com.spring.javaProjectS12.vo.AdminProductVO">
		select * from adminProduct
	</select>
	
		
	<select id="getProductInfo" resultType="com.spring.javaProjectS12.vo.AdminProductVO">
		select * from adminProduct where idx = #{idx};
	</select>
	
	
	
	<select id="getContentList" resultType="com.spring.javaProjectS12.vo.AdminProductVO">
		select * from adminProduct where idx = #{idx};
	</select>
	
	<select id="getFeaturesList" resultType="com.spring.javaProjectS12.vo.AdminFeaturesVO">
		select * from adminFeatures order by idx desc ;
	</select>
	
	<insert id="setAdminFeaturestOk">
		insert into adminFeatures values(default,#{vo.title},default,#{vo.content},#{vo.fname});
	</insert>

	<insert id="setAdminProductOk">
    	insert into adminProduct values (default,#{vo.name},#{vo.color},#{vo.price},#{vo.fname},#{vo.part});
    </insert>
    
    <delete id="setProductDelete">
     delete from adminProduct where idx = #{idx};
    </delete>
    
</mapper>